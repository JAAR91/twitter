<div class="row w-100 m-0 p-0 bg-dark position-relative">
    <div class="col-9 p-0">
        <%= banner?(@user.banner, 'w-100 banner') %>
    </div>
    <div class="col-3 bg-light p-0 border position-sticky">
        <div class="d-flex justify-content-around align-items-center bg-light py-4">
            <%= link_to "+", root_path, class:'btn btn-outline-secondary rounded-circle fs-3 py-0 px-3' %>
            <%= profile_pic(@user.avatar, 'rounded-circle p-0') %>
            <%= link_to image_tag('menu.png'), root_path, class:'btn btn-outline-secondary rounded-circle py-2' %>
        </div>
        <div class="d-flex flex-column justify-content-center align-items-center border-bottom">
        <p class="m-0 fs-4"><%= @user.name %></p>
        <p class="text-muted">@<%= @user.username %></p>
        </div>
        <div class="row w-100 m-0 border-bottom">
            <div class="col-4 d-flex flex-column justify-content-center align-items-center my-2">
                <p class="m-0">6000</p>
                <p class="m-0">Tweets</p>
            </div>
            <div class="col-4 d-flex flex-column justify-content-center align-items-center border-start border-end">
                <p class="m-0">6000</p>
                <p class="m-0">Followging</p>
            </div>
            <div class="col-4 d-flex flex-column justify-content-center align-items-center">
                <p class="m-0">6000</p>
                <p class="m-0">Followers</p>
            </div>
        </div>
        <div class="container">
            <p class="fs-4 text-muted text-center py-3 border-bottom">Follwed by:</p>
        </div>
    </div>
</div>