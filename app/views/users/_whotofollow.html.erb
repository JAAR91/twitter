    <div class="container bg-grey p-0 w-whotof">
        <p class="fs-4 text-muted border-bottom border-white m-0 text-center py-3">WHO TO FOLLOW</p>
        <ul class="list-group list-group-flush m-0 px-4 border-bottom border-white">
            <% newfollow.each do |user|%>
                <li class="list-group-item bg-transparent my-2 py-2 px-0">
                    <div class="row m-0 p-0">
                        <div class="col-10 d-flex m-0 p-0">
                            <a href="/users/<%= user.id %>"><%= profile_pic(user.avatar, 'user_avatar rounded-circle followed-avatar m-0') %></a>
                            <div class="d-flex flex-column p-0 m-0">
                                <%= link_to user.name, user_path(user.id), class:'text-decoration-none text-dark m-0 p-0' %>
                                <p class="text-muted m-0">@<%= user.username %></p>
                            </div>
                        </div>
                        <div class="col-1 m-0 d-flex"> 
                            <%= follow_link(user.id) %>
                        </div>
                    </div>
                </li>
            <%end%>
        </ul>
        <div class="p-3 border-bottom border-white">
            <%= link_to "Popular accounts", users_path, class:'text-decoration-none me-2' %>
            <%= link_to  "Find friends", users_path, class:'text-decoration-none' %>
        </div>
    </div>