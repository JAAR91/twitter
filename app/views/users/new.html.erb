
        <div class="bg-twitter-blue p-3 mt-10 mx-5 row rounded-3 shadow-lg shadow-around p-3">
            <div class="col-lg-7 col-md-12 border-end position-relative">
                <h1 class="position-absolute text-sdark">Welcome to KITTEN</h1>
                <%= image_tag "registerbackground.jpg", class:'registerbackground p-0 w-100 h-100' %>
                <%= image_tag "blackcat", class:'catlogo' %>
            </div>
            <div class="col-lg-5 col-md-12">
                <div class="container">
                    <h2 class="text-white">Create your account</h2>
                    <%= form_with model: @user do |f| %>
                        <%= f.label 'Enter your username:', class: "my-2" %>
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">@</span>
                            <%= f.text_field :username, class: "form-control rounded-end", placeholder:'Username' %> <br>
                        </div>
                        <% @user.errors.full_messages_for(:username).each do |message| %>
                            <div class="text-muted">
                                <%= message %>
                            </div>
                        <% end %>
                        <%= f.label 'Enter your name:', class: "my-2" %>
                            <%= f.text_field :name, class: "form-control shadow", placeholder:'Your name here' %>
                            <% @user.errors.full_messages_for(:name).each do |message| %>
                               <div class="text-muted">
                                    <%= message %>
                                </div>
                            <% end %>
                        <div>
                            <%= f.label 'Enter your password', class: "my-2" %>
                            <%= f.password_field :password, class: "form-control shadow", placeholder:'Enter your password' %>
                            <% @user.errors.full_messages_for(:password).each do |message| %>
                                <div class="text-muted">
                                    <%= message %>
                                </div>
                            <% end %>
                            <%= f.label 'Enter your password again', class: "my-2" %>
                            <%= f.password_field :password_confirmation, class: "form-control shadow", placeholder:'Re-enter password' %>
                        <div>
                        <div class="container border rounded my-2 shadow">
                            <%= f.label "Profile picture" %>
                            <%= f.file_field :avatar, class:'my-2', multiple: false, accept:'image/*' %>
                        </div>
                        <div class="d-flex justify-content-end my-3">
                            <p class="pt-3 m-0">Already a user? got to<%= link_to 'Login Page', login_path, class:'link-dark mx-2'%></p>
                            <%= f.submit "Register", class:"btn btn-outline-dark mx-2" %> 
                        </div>
                    <% end %>
                </div>
                
            </div>
        </div>


 