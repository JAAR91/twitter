<div class="row w-100 m-0 p-0 bg-dark">
    <div class="col-9 bg-light">
        <ul class="list-group my-3">
            <% @user.each do |user|%>
                <li class="list-group-item d-flex justify-content-between">
                <div class="d-flex mx-3">
                    <a href="/users/<%= user.id %>"><%= profile_pic(user.avatar, 'user_avatar rounded') %></a>
                    <div class="d-flex flex-column mx-3">
                        <%= link_to user.name, user_path(user.id), class:'fs-3 text-decoration-none text-dark' %>
                        <p class="text-muted">@<%= user.username %></p>
                    </div>
                </div>
                 <div class="row m-0 p-0">
                    <div class="col-4 d-flex flex-column justify-content-center align-items-center">
                        <p class="m-0"><%= user.posts.count %></p>
                        <p class="m-0 text-muted">Tweets</p>
                    </div>
                    <div class="col-4 d-flex flex-column justify-content-center align-items-center">
                        <p class="m-0">6000</p>
                        <p class="m-0 text-muted">Followging</p>
                    </div>
                    <div class="col-4 d-flex flex-column justify-content-center align-items-center">
                        <p class="m-0">6000</p>
                        <p class="m-0 text-muted">Followers</p>
                    </div>
                </div>
                <div class="d-flex align-items-center"> 
                    <p class="btn btn-outline-primary m-0">Follow</p>
                </div>
            </li>
            <%end%>
        </ul>
    </div>
</div>